<h1><%= t(:post) %></h1>
<p id="notice"><%= notice %></p>

<div style="background-color:#<%= @post.category.color%>;color:#<%= @post.category.font_color%>;width:100%;height:80px;margin:10px; padding:10px;border-radius:11px;">
  <div style="float:left;width:800px;">
    <%= @post.public ? t(:public) : t(:private) %>
    <br>
     <%= @post.category.description %> - <%= @post.subject %>
    <br>
  </div>   
   <div style='text-align:center;'>        
        <div>
            <img src='<%= @post.user.image %>' style="border:1px solid white;">
        </div>
        <div style="padding-left:800px">
            <%= @post.user.name %>         
        </div>
   </div>   

</div>



<div style="background-color:#<%= @post.category.color%>;color:#<%= @post.category.font_color%>;width:100%;margin:10px; padding:10px; border-radius:11px;">
  <%= raw break_line(@post.body) %>
</div>


<div style="width:460px;float:left;">
  <%= links @post %>
  <%= new_link(@post) %>
</div>

<div style="width:460px;float:left;margin-left:40px">
  <%= attachments @post %>
  <%= new_attachment(@post) %>
</div>
<br>

<div style="clear:both;width:100%;margin-top:160px;">
  <%= comments @post %>
  <%= new_comment(@post) %>
</div>

<div style="clear:both;width:100%;margin-top:20px;">
  <%= post_users @post %>
  <%= new_post_user(@post) %>
</div>

<%= link_to t(:edit), edit_post_path(@post) %> |
<%= link_to t(:back), posts_path %>
<br>
<br>
<br>
<br>



